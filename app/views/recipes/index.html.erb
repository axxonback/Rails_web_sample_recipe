<h1>Recipes#index</h1>

<%@recipes.each do |recipe|%>
<%= link_to recipe.name, recipe_path(recipe) %>
<div id="recipe-<%= recipe.id %>"><%= truncate(recipe.content) %></div>
<button class = "js-more" data-id = "<%= recipe.id %>">More Info</button>
<ul id="recipe-<%=recipe.id%>-comments"> </ul>
<%end%>

<%if @user == current_user %>
<p><%= link_to "Add New Recipe", new_recipe_path(current_user) %></p>
<%end%>

<script type = "text/javascript" charset = "utf-8">
$(function() {
  $('.js-more').on("click", function() {
    var id = $(this).data("id")

    $.get("/recipes/" + id + ".json", function(data) {
      var recipe = data["recipe"]
      $('#recipe-' + id).text(recipe["content"])
      
    });
  });
});
</script>
